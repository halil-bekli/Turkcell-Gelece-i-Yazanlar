@using MyAspNetCoreApp2.Web.Models
@{
    ViewData["Title"] = "Update";
}
@model Product

<h1>Update the product</h1>

<form asp-controller="product" asp-action="update" method="post">

    <input type="hidden" asp-for="Id" />

    <label>Ürün İsmi</label>
    <input type="text" asp-for="Name" />
    <br />
    <label>Ürün Fiyat</label>

    <input type="text" asp-for="Price" />
    <br />
    <label>Ürün Stok</label>

    <input type="text" asp-for="Stock" />

    <br />
    <label>Ürün Rengi</label>

    <input type="text" asp-for="Color" />
    <br />

    <button type="submit">Ürün Güncelle</button>

</form>

<h2>Hibrit Model</h2>

<form asp-controller="product" asp-action="HybridUpdate" asp-route-productId="@Model.Id" method="post">

    <label>Ürün İsmi</label>
    <input type="text" asp-for="Name" />
    <br />
    <label>Ürün Fiyat</label>

    <input type="text" asp-for="Price" />
    <br />
    <label>Ürün Stok</label>

    <input type="text" asp-for="Stock" />

    <br />
    <label>Ürün Rengi</label>

    <input type="text" asp-for="Color" />
    <br />

    <button type="submit">Ürün Güncelle</button>

</form>