@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Product>

<h1>Ürünler</h1>

<a asp-controller="Product" asp-action="Add">Ürün ekle</a>
<table class=table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                İşlem
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Stock</td>
                            <td> <a asp-controller="Product" asp-action="Remove" asp-route-iD="@item.Id">Sil</a> </td>  
                                    <td><button> <a asp-controller="Product" asp-action="Update" asp-route-iD="@item.Id">Güncelle</a></button> </td>
                        </tr>
        }
    </tbody>
</table>    